<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true">

    <!-- Konten utama -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="@dimen/global_margin"
        android:paddingEnd="@dimen/global_margin"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/tvNama"
            style="@style/MediumTextGray"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="Paket Nongki bareng + Susu murni langsung dari kasir (tapi kasir cowo)."
            android:textColor="@color/black"
            android:layout_weight="1"
            android:gravity="start|center_vertical" />

        <TextView
            android:id="@+id/tvQty"
            style="@style/MediumTextGray"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="9.999"
            android:textColor="@color/black"
            android:gravity="end|center_vertical" />

        <TextView
            android:id="@+id/tvHarga"
            style="@style/MediumTextGray"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="999.999"
            android:textColor="@color/black"
            android:gravity="end|center_vertical" />

        <TextView
            android:id="@+id/tvTotal"
            style="@style/MediumTextGray"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text="9.999.999"
            android:textColor="@color/black"
            android:gravity="end|center_vertical" />
    </LinearLayout>

    <!-- Garis bawah -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_raven" />
</LinearLayout>
