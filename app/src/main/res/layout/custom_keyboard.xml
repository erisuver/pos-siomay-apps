<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#EEE"
    android:padding="8dp">

    <!-- Layout untuk Angka Utama -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">

        <!-- Baris 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button style="@style/KeyButton" android:id="@+id/btn_1" android:text="1"/>
            <Button style="@style/KeyButton" android:id="@+id/btn_2" android:text="2"/>
            <Button style="@style/KeyButton" android:id="@+id/btn_3" android:text="3"/>
        </LinearLayout>

        <!-- Baris 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button style="@style/KeyButton" android:id="@+id/btn_4" android:text="4"/>
            <Button style="@style/KeyButton" android:id="@+id/btn_5" android:text="5"/>
            <Button style="@style/KeyButton" android:id="@+id/btn_6" android:text="6"/>
        </LinearLayout>

        <!-- Baris 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button style="@style/KeyButton" android:id="@+id/btn_7" android:text="7"/>
            <Button style="@style/KeyButton" android:id="@+id/btn_8" android:text="8"/>
            <Button style="@style/KeyButton" android:id="@+id/btn_9" android:text="9"/>
        </LinearLayout>

        <!-- Baris 4 (Titik, 0, Koma) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button style="@style/KeyButton" android:id="@+id/btn_dot" android:text="."/>
            <Button style="@style/KeyButton" android:id="@+id/btn_0" android:text="0"/>
            <Button style="@style/KeyButton" android:id="@+id/btn_comma" android:text=","/>
        </LinearLayout>
    </LinearLayout>

    <!-- Layout untuk Tombol Tambahan -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button style="@style/KeyButton2" android:id="@+id/btn_00" android:text="00"/>
        <Button style="@style/KeyButton2" android:id="@+id/btn_000" android:text="000"/>
        <Button style="@style/KeyButton2" android:id="@+id/btn_backspace" android:text="⌫"/>
        <Button style="@style/KeyButton3" android:id="@+id/btn_done" android:text="✔"/>
    </LinearLayout>

</LinearLayout>
